{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "lluvias": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "",
      "sourceRoot": "src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/lluvias",
            "index": "src/index.html",
            "browser": "src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "assets": [
              "src/manifest.webmanifest",
              {
                "glob": "**/*",
                "input": "src/favicons",
                "output": "/favicons/"
              },
              {
                "glob": "**/*",
                "input": "src/data",
                "output": "/data/"
              }
            ],
            "styles": ["src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "500kb",
                  "maximumError": "1mb"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "2kb",
                  "maximumError": "4kb"
                }
              ],
              "outputHashing": "all",
              "serviceWorker": "ngsw-config.json"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "configurations": {
            "production": {
              "buildTarget": "lluvias:build:production"
            },
            "development": {
              "buildTarget": "lluvias:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "icons": {
          "builder": "@jaimemartinmartin15/jei-devkit-angular-builders:generate-icons",
          "options": {
            "configFile": "src/app/svg/svg.json"
          }
        },
        "e2e": {
          "builder": "@jaimemartinmartin15/jei-devkit-angular-builders:e2e-puppeteer",
          "options": {
            "devServerTarget": "lluvias:serve",
            "testRunner": "jasmine",
            "pixelThreshold": 25,
            "imageThreshold": 0.08,
            "originalImagesFolder": "e2e/screenshots/originals/",
            "e2eResultImagesFolder": "e2e/screenshots/e2e-results/",
            "commitResults": false,
            "gitUserEmail": "jaimemartinmartin15@users.noreply.github.com"
          },
          "configurations": {
            "production": {
              "devServerTarget": "lluvias:serve:production"
            }
          }
        }
      }
    }
  }
}
